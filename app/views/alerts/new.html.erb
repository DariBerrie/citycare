<div class="newAlertContainer">
  <div id="inputFields">
        <%= simple_form_for(@alert) do |f| %>
          <div class="form-input">
          <%= f.input :category,
              as: :radio_buttons,
              collection_wrapper_tag: 'div',
              collection_wrapper_class: 'category-wrapper',
              item_wrapper_class: 'category-item',
              input_html: {class: 'category-selector'},
              collection: ["Vandalism", "Littering", "Broken Object", "Transportation", "New Idea", "Other"]%>
            <%= f.input :title %>
            <%= f.input :description %>
            <%= f.input :address %>
            <%= f.input :photos %>
          </div>
          <%= f.submit 'Create Alert', class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
</div>
