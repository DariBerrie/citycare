<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="map-container">
        <div style="width: 100%; height: 450px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
    </div>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-12 col-lg-4">
      <div class="search-container d-flex flex-column align-items-center">
        <h3 class="my-4">Send an alert</h3>
        <div data-controller="address-autocomplete"
              data-address-autocomplete-api-key-value= "<%=ENV["MAPBOX_API_KEY"]%>">
          <%= form_with url: pages_path, method: :get, class: "d-none" do %>
                  <%= text_field_tag :query,
                    params[:query],
                    value: params[:query],
                    class: "d-none",
                    data: {address_autocomplete_target: "address"} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
