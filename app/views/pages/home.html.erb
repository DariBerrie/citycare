<div class="form-container d-flex flex-column align-items-center text-center">
  <h1 class="text-center my-4">Contact Us</h1>
  <%= form_for @contact, class: "d-flex flex-column align-items-center justify-content-center" do |f| %>
      <%= f.text_field  :name, required: true,
                        class: "form-control bg-white border-0 shadow-sm",
                        placeholder: "Name" %><br>
      <%= f.text_field :email, required: true,
                        class: "form-control bg-white border-0 shadow-sm",
                        placeholder: "Email" %><br>
      <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "form-control bg-white border-0 shadow-sm",
            placeholder: "Tell us what's up!"%><br>

        <div class= "d-none">
          <%= f.label :nickname %>
          <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
        </div>

      <%= f.submit 'Send Message', class: 'text-white btn btn-primary rounded-4' %>
  <% end %>
</div>
