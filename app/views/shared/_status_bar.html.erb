<% case @alert.status %>
<% when "submitted" %>
  <span class="text-muted">
    <%= image_tag("load_red.gif", width: 50) %>
    Alert <%= @alert.status %>
  </span>
<% when "in progress" %>
  <span class="text-muted">
    <%= image_tag("load_yellow.gif", width: 50) %>
    Alert <%= @alert.status %>
  </span>
<% when "resolved" %>
  <span class="text-muted">
    <%= image_tag("load_green.gif", width: 50) %>
    Alert <%= @alert.status %>
  </span>
<% end %>
